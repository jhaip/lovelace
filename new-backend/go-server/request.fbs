namespace roomupdatefbs;

enum UpdateType:byte {
    Ping = 0,
    Claim,
    Retract,
    Subscribe,
    Death,
    SubscriptionDeath
}

enum FactType:byte {
    Id = 0,
    Text,
    Integer,
    Float,
    Binary
}

table Fact {
    type:FactType;
    value:[ubyte];
}

table RoomUpdate {
    type:UpdateType;
    source:string;
    subscriptionId:string;
    facts:[Fact];
}

table RoomUpdates {
    updates:[RoomUpdate];
}

table RoomResult {
    variableName:string;
    value:[ubyte];
}

table ResultSet {
    resultSet:[RoomResult];
}

table RoomResponse {
    source:string;
    subscriptionId:string;
    results:[ResultSet];
}

root_type RoomUpdates;
